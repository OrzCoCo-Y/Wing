{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Consul": {
    "Url": "http://localhost:8500",
    "Service": {
      //Http  Grpc
      "Option": "Http",
      "HealthCheck": {
        "Url": "http://localhost:55205/health",
        //单位：秒
        "Timeout": 10,
        //单位：秒
        "Interval": 10
      },
      "Name": "WingGateWay",
      "Host": "localhost",
      "Port": 44307,
      "Tag": "测试",
      "LoadBalancer": {
        //RoundRobin  WeightRoundRobin LeastConnection
        "Option": "WeightRoundRobin",
        //权重
        "Weight": 50
      },
      "Scheme": "https"
    },
    //定时同步数据时间间隔，单位：秒 小于等于0表示立即响应
    "Interval": 10
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Port": 5672,
    //消息过期时间，单位：毫秒，过期会自动路由到死信队列，小于或等于0则永久有效
    "MessageTTL": 10000,
    "ExchangeName": "product",
    //每次投递消息数量
    "PrefetchCount": 1
  },
  "Redis": {
    "Sentinels": [ "10.10.166.167:36379", "10.10.166.168:36379", "10.10.166.169:36379" ],
    "ConnectionString": "127.0.0.1:6379,password=123456,defaultDatabase=0,prefix=wing_"
  },
  "Jwt": {
    "Secret": "U2FsdGVkX18E82bSYRnqfv7isu6313BQ8QNTs0TcZZK2rwviQw==",
    "Iss": "http://www.aistory.top",
    "Aud": "PingPongBoy",
    //token过期分钟数
    "Expire": 1440
  },
  "ConnectionStrings": {
    "WingGateWay": "Data Source=192.168.56.96;Initial Catalog=Wing;User ID=sa;Password=wing123.;MultipleActiveResultSets=true",
    "WingMQ": "Data Source=192.168.56.96;Initial Catalog=Wing;User ID=sa;Password=wing123.;MultipleActiveResultSets=true"
  },
  "GateWay": {
    // 个性化策略
    "Policies": [
      {
        "ServiceName": "product",
        //是否启用熔断
        "IsEnableBreaker": true,
        //熔断前出现允许错误几次
        "ExceptionsAllowedBeforeBreaking": 3,
        //熔断多长时间（毫秒）
        "MillisecondsOfBreak": 10000,
        //最多重试几次，如果为0则不重试
        "MaxRetryTimes": 0,
        //重试间隔的毫秒数
        "RetryIntervalMilliseconds": 100,
        "TimeOutMilliseconds": 1000,
        "UseJWTAuth": true,
        "AuthKey": "abc"

      },
      {
        "ServiceName": "product1",
        //是否启用熔断
        "IsEnableBreaker": false,
        //熔断前出现允许错误几次
        "ExceptionsAllowedBeforeBreaking": 0,
        //熔断多长时间（毫秒）
        "MillisecondsOfBreak": 10000,
        //最多重试几次，如果为0则不重试
        "MaxRetryTimes": 0,
        //重试间隔的毫秒数
        "RetryIntervalMilliseconds": 100,
        "TimeOutMilliseconds": 0,
        "AuthKey": "ddf"
      }
    ],
    // 全局策略
    "Global": {
      "Policy": {
        //是否启用熔断
        "IsEnableBreaker": false,
        //熔断前出现允许错误几次
        "ExceptionsAllowedBeforeBreaking": 3,
        //熔断多长时间（毫秒）
        "MillisecondsOfBreak": 1000,
        //最多重试几次，如果为0则不重试
        "MaxRetryTimes": 0,
        //重试间隔的毫秒数
        "RetryIntervalMilliseconds": 100,
        "TimeOutMilliseconds": 10000
        //"AuthKey": "cck"
      }
    },
    // 请求日志
    "Log": {
      "IsEnabled": true,
      //0 单机MQ(channel)  1直连数据库  2 EventBus
      "Provider": 1
    }
  }
}
